{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "MerkleKV Configuration Schema",
  "required": ["broker", "encryption", "sync"],
  "properties": {
    "broker": {
      "type": "object",
      "required": ["host", "port"],
      "properties": {
        "host": { "type": "string", "format": "hostname" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "username": { "type": "string" },
        "password": { "type": "string" },
        "tls": { "type": "boolean", "default": false },
        "keepAlive": { "type": "integer", "minimum": 10, "maximum": 300, "default": 60 }
      }
    },
    "encryption": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "algorithm": { "type": "string", "enum": ["AES-256-GCM", "ChaCha20-Poly1305"] },
        "keyRotationInterval": { "type": "integer", "minimum": 3600, "default": 86400 }
      }
    },
    "sync": {
      "type": "object",
      "required": ["maxRetries", "backoffStrategy"],
      "properties": {
        "maxRetries": { "type": "integer", "minimum": 1, "maximum": 10 },
        "backoffStrategy": { "type": "string", "enum": ["linear", "exponential", "constant"] },
        "batchSize": { "type": "integer", "minimum": 1, "maximum": 1000, "default": 100 }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "metricsInterval": { "type": "integer", "minimum": 5, "maximum": 300, "default": 30 },
        "logLevel": { "type": "string", "enum": ["debug", "info", "warn", "error"], "default": "info" }
      }
    }
  }
}