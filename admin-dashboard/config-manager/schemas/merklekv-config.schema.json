{
  "type": "object",
  "properties": {
    "mqtt": {
      "type": "object",
      "properties": {
        "broker": {"type": "string"},
        "port": {"type": "number"},
        "clientId": {"type": "string"}
      },
      "required": ["broker", "port"]
    },
    "database": {
      "type": "object", 
      "properties": {
        "url": {"type": "string"},
        "timeout": {"type": "number"}
      },
      "required": ["url"]
    },
    "features": {
      "type": "object",
      "properties": {
        "syncEnabled": {"type": "boolean"},
        "retryCount": {"type": "number"},
        "batchSize": {"type": "number"}
      }
    }
  },
  "required": ["mqtt", "database"]
}