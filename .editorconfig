root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.dart]
indent_size = 2

[*.{js,ts,tsx}]
indent_size = 2

[*.{java,kt}]
indent_size = 4

[*.swift]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.gradle]
indent_size = 4

[*.{xml,plist}]
indent_size = 2
